<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaVeterinaraMobile.LoginPage"
             Title="Login">
    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
        <Image Source="dotnet_bot.png" HeightRequest="150" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Parola" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="#512BD4"/>
        <Button Text="Inregistrare" Clicked="OnRegisterClicked" BackgroundColor="Transparent" TextColor="Black"/>
    </VerticalStackLayout>
</ContentPage>