<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaVeterinaraMobile.AppointmentPage"
             Title="Lista Programări">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Clicked="OnAddAppointmentClicked" />
    </ContentPage.ToolbarItems>

    <StackLayout Margin="20">
        <SearchBar Placeholder="Caută pacient..."
                   TextChanged="OnSearchBarTextChanged" 
                   Margin="0,0,0,10" />
        <ListView x:Name="listView" 
                  Margin="20"
                  ItemSelected="OnListViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding NumePacient}" 
                              Detail="{Binding VetDetails}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>