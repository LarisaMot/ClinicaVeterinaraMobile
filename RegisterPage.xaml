<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaVeterinaraMobile.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Parola" IsPassword="True" />
        <Button Text="Creeaza Cont" Clicked="OnRegisterClicked" BackgroundColor="#512BD4"/>
        <Button Text="Anuleaza" Clicked="OnCancelClicked" BackgroundColor="Gray"/>
    </VerticalStackLayout>
</ContentPage>